@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Apagar sua conta";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="alert alert-warning" role="alert">
    <p>
        <strong>Apagando sua conta significa apagar seu usuário, perfil e posts, para sempre. Tem certeza que deseja continuar?</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post" class="form-group">
        <div asp-validation-summary="All" class="text-danger"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="btn btn-danger" type="submit">Apagar minha conta e encerrar uso do serviço</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}