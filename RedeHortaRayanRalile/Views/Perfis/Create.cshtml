@model RedeHortaRayanRalile.Models.Perfis.PerfilCreateViewModel

@{
    ViewData["Title"] = "Crie seu perfil:";
}

<h1>Criação de seu perfil - Rede Social de Horta</h1>

<h4>Perfil</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form action="/perfis/create" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Foto" value="ToAdd">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="file" name="foto" accept="image/*" class="form-control" />
                <span asp-validation-for="Foto" class="text-danger"></span>
            </div>
            <!--  <div class="form-group">
          <label asp-for="Biografia" class="control-label"></label>
          <input asp-for="Biografia" class="form-control" />
          <span asp-validation-for="Biografia" class="text-danger"></span>
      </div> -->
            <div class="form-group">
                <label asp-for="TipoHorta" class="control-label"></label>
                <input asp-for="TipoHorta" class="form-control" />
                <span asp-validation-for="TipoHorta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Interesses" class="control-label"></label>
                <input asp-for="Interesses" class="form-control" />
                <span asp-validation-for="Interesses" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Biografia" class="control-label"></label>
                <textarea class="form-control" id="Biografia" name="Biografia" placeholder="Por favor, fale um pouco sobre você (Opcional)" rows="8"></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home">Retornar para a HomePage</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
