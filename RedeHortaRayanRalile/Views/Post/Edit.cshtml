@model RedeHortaRayanRalile.Models.Post.PostEditViewModel

@{
    ViewData["Title"] = "Editar post";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar</h1>

<h4>Edição de post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form action="/post/edit" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="PerfilId" />
            <input type="hidden" asp-for="DataCriacao" />
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Descricao" class="control-label"></label>
                <textarea class="form-control" asp-for="Descricao" rows="8"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Multimedia" class="control-label">Imagem, Vídeo ou Foto (opcional)</label>
                <input type="file" name="myfile" accept=".jpeg, .jpg, .png, .gif, .bmp, .webp, .mp4, .mp3" class="form-control" />
                <span validation-for="Multimedia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Obs: não fazer upload de mídia mantém a atual no post.</label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
